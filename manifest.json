{
  "manifest_version": 2, 
  "name": "Mandarin", 
  "version": "0.0.1",
  "description": "Mandarin",
  "browser_action": {
    "default_title": "Mandarin",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
        "src/options.js",
        "src/received_a_request.js"
    ],
    "persistent": true
  },
  "short_name": "Mandarin",
  "permissions": [
    "bookmarks"
  ],
  "options_page": "options.html",
   "content_scripts":[
    {
      "js":[
          "build/jquery-1.11.3.min.js",
          "src/options.js",
          "src/updated_page.js"
      ],
      "css":[
        "css/mystyles.css"
      ],
      "matches":[
        "https://www.google.ru/*"
      ],
      "run_at": "document_start"
    }
  ]
}